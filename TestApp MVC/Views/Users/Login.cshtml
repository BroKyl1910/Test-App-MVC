@model IEnumerable<TestApp.MVC.Models.User>

@{
    ViewData["Title"] = "Index";
}

<img class="yellow-bg-img" src="~/images/Background.png" />

<div class="body-content">
    <div class="container login-container">
        <div class="login-container-header">
            <h1>Test App</h1>
        </div>
        <div class="row">
            <div class="col-lg-6 col-sm-12 info-block">
                <p>
                    Web app counterpart to desktop Test App.
                    View results to your/your students' tests in
                    beautiful graphics and charts in order to get
                    the full picture!
                </p>
            </div>
            <div class="col-lg-6 col-sm-12 login-wrapper">
                <h1>Login</h1>
                <form action="/Users/Login" method="post">
                    <div class="form-group">
                        <label class="control-label">Username</label>
                        <input type="text" name="username" value="" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Password</label>
                        <input type="password" name="password" value="" class="form-control" />
                    </div>

                    <label class="control-label text-danger">@ViewBag.Error</label><br />

                    <input type="submit" name="submit" value="Login" class="default-yellow-button" />
                    <a href="/Users/Register">Not a user yet? Register now!</a>
                </form>
            </div>
        </div>
    </div>
</div>